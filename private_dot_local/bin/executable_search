#!/bin/bash

session=$(find ~/File/Work/ ~/File/Personal/ -maxdepth 5 -mindepth 1 \( -type d -name 'node_modules' -prune \) -o \( -type d -not -path '*/\.*' \) | sed "s#^$HOME/##" | fzf)

if [ -z "$session" ]; then
	exit 0
fi

session_name=$(basename "$session" | tr " ." "__")

if ! tmux has-session -t "$session_name" 2>/dev/null; then
	tmux new-session -s "$session_name" -c "$session" -d
fi

# tmux switch-client -t "$session_name"
tmux switch-client -t "$session_name" || tmux attach-session -t "$session_name"
